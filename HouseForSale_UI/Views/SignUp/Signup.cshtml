@model AppUserDto



@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Signup" method="post">
    <div class="form-group">
        <label for="UserName">Kullanıcı Adı</label>
        <input type="text" id="UserName" asp-for="UserName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Password">Şifre</label>
        <input type="password" id="Password" asp-for="Password" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Name">Ad Soyad</label>
        <input type="text" id="Name" asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" id="Email" asp-for="Email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>

<!-- Modal for Signup Status -->
<div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signupModalLabel">Kayıt Durumu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                }
                else if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>
<script>
    @if (ViewBag.Message != null || ViewBag.ErrorMessage != null)
    {
        <text>
                var signupModal = new bootstrap.Modal(document.getElementById('signupModal'));
                signupModal.show();
        </text>
    }
</script>



@model VerifyCodeDto

@{
    ViewData["Title"] = "Verify Your Account";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Verify" method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" id="Email" asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Code">Doğrulama Kodu</label>
        <input type="text" id="Code" asp-for="Code" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Onayla</button>
</form>

<!-- Modal for Verification Status -->
<div class="modal fade" id="verifyModal" tabindex="-1" aria-labelledby="verifyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="verifyModalLabel">Doğrulama Durumu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                }
                else if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script>
    @if (ViewBag.Message != null)
    {
        <text>
                var verifyModal = new bootstrap.Modal(document.getElementById('verifyModal'));
                verifyModal.show();
                    setTimeout(() => {window.location.href = '/Home/Index'; }, 3000); // Başarılı doğrulama sonrası yönlendirme
        </text>
    }
    else if (ViewBag.ErrorMessage != null)
    {
        <text>
                var verifyModal = new bootstrap.Modal(document.getElementById('verifyModal'));
                verifyModal.show();
        </text>
    }
</script>
 
